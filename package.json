{
	"name": "convex-verify",
	"version": "1.0.3",
	"description": "Type-safe verification and validation for Convex database operations",
	"packageManager": "pnpm@9.10.0",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./core": {
			"types": "./dist/core/index.d.ts",
			"import": "./dist/core/index.mjs",
			"require": "./dist/core/index.js"
		},
		"./transforms": {
			"types": "./dist/transforms/index.d.ts",
			"import": "./dist/transforms/index.mjs",
			"require": "./dist/transforms/index.js"
		},
		"./configs": {
			"types": "./dist/configs/index.d.ts",
			"import": "./dist/configs/index.mjs",
			"require": "./dist/configs/index.js"
		},
		"./plugins": {
			"types": "./dist/plugins/index.d.ts",
			"import": "./dist/plugins/index.mjs",
			"require": "./dist/plugins/index.js"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"import": "./dist/utils/index.mjs",
			"require": "./dist/utils/index.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch --dts --sourcemap",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"test:once": "vitest run",
		"test:coverage": "vitest run --coverage",
		"prepublishOnly": "npm run build"
	},
	"peerDependencies": {
		"convex": ">=1.31.3"
	},
	"devDependencies": {
		"@edge-runtime/vm": "^5.0.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@vitest/coverage-v8": "4.0.17",
		"convex": "^1.31.3",
		"convex-test": "^0.0.41",
		"semantic-release": "^25.0.2",
		"tsup": "^8.5.1",
		"typescript": "~5.6.3",
		"vitest": "^4.0.17"
	},
	"keywords": [
		"convex",
		"validation",
		"verification",
		"database",
		"typescript"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/natedunn/convex-verify"
	},
	"author": "",
	"bugs": {
		"url": "https://github.com/natedunn/convex-verify/issues"
	},
	"homepage": "https://github.com/natedunn/convex-verify#readme",
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			[
				"@semantic-release/npm",
				{
					"npmPublish": false
				}
			],
			"@semantic-release/github",
			[
				"@semantic-release/git",
				{
					"assets": [
						"package.json",
						"CHANGELOG.md"
					],
					"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
				}
			]
		]
	}
}
